<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.jeongmini.project.post.dao.PostDAO">
 	<insert id="insertPost" parameterType="map">
 		INSERT INTO `community`
 		(
 			`userId`
 			,`userName`
 			,`content`
 			,`category`
 			,`imagePath`
 			,`createdAt`
 			,`updatedAt`
 		) VALUES (
 			#{userId}
 			, #{userName}
 			, #{content}
 			, #{category}
 			, #{imagePath}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<insert id="insertPostDaily" parameterType="map">
 		INSERT INTO `daily`
 		(
 			`userId`
 			,`userName`
 			,`content`
 			,`condition`
 			,`health`
 			,`defecation`
 			,`walk`
 			,`medicine`
 			,`createdAt`
 			,`updatedAt`
 		) VALUES (
 			#{userId}
 			, #{userName}
 			, #{content}
 			, #{condition}
 			, #{health}
 			, #{defecation}
 			, #{walk}
 			, #{medicine}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<select id="selectCommunityList" resultType="com.jeongmini.project.post.model.Community">
 		SELECT
 			`id`
 			,`userId`
 			,`userName`
 			,`content`
 			,`category`
 			,`imagePath`
 			,`createdAt`
 			,`updatedAt`
 		FROM
 			`community`
 		ORDER BY `id` DESC;
 	</select>
 	
 	<select id="selectCommunity" parameterType="int" resultType="com.jeongmini.project.post.model.Community">
 		SELECT
 			`id`
 			,`userId`
 			,`userName`
 			,`content`
 			,`category`
 			,`imagePath`
 			,`createdAt`
 			,`updatedAt`
 		FROM
 			`community`
 		WHERE 
 			`id` = #{id}
 	</select>
 	
 	<select id="selectDailyList" resultType="com.jeongmini.project.post.model.Daily">
 		SELECT
 			`id`
 			,`userId`
 			,`userName`
 			,`content`
 			,`condition`
 			,`health`
 			,`defecation`
 			,`walk`
 			,`medicine`
 			,`createdAt`
 			,`updatedAt`
 		FROM
 			`daily`
 		WHERE
 			`userId` = #{userId}
 	</select>
 	
 	<delete id="deletePost" parameterType="map">
 		DELETE FROM 
 			`community`
 		WHERE
			`id` = #{id} AND
			`userId` = #{userId}
 	</delete>

 	<select id="selectCommunityCategoryList" resultType="com.jeongmini.project.post.model.Community">
 		SELECT
 			`id`
 			,`userId`
 			,`userName`
 			,`content`
 			,`category`
 			,`imagePath`
 			,`createdAt`
 			,`updatedAt`
 		FROM
 			`community`
 		WHERE
 		 `category` = #{category}
 	</select>
 	
 	<select id="selectCommunityCategory" resultType="com.jeongmini.project.post.model.Community">
 		SELECT
 			`id`
 			,`userId`
 			,`userName`
 			,`content`
 			,`category`
 			,`imagePath`
 			,`createdAt`
 			,`updatedAt`
 		FROM
 			`community`
 		WHERE
 		 `category` = #{category}
 	</select>
 
 </mapper>